                ],
                "summary": "Register a candidate",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "type": "object",
                        "consumes": "application/json",
                        "properties": {
                            "firstname": {
                                "type": "string",
                                "required": "true"
                            },
                            "lastname": {
                                "type": "string",
                                "required": "true"
                            },
                            "nationalId": {
                                "type": "string",
                                "required": "true"
                            },
                            "profilePicture": {
                                "type": "string",
                                "required": "true"
                            },
                            "missionStatement": {
                                "type": "string",
                                "required": "true"
                            },
                            "gender": {
